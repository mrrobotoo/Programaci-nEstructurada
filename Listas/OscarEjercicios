package mx.com.cuh;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Ganador {
	 public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        
	        
	        Integer [] Ganador = {22, 54, 80};
	        
	        
	        System.out.println("Ingresar numero: ");
	        int num = scanner.nextInt();
	        
	        boolean invitado = false;
	        for (int numero : Ganador) {
	            if (numero == num) {
	                invitado = true;
	                break;
	            }
	        }

	        if (invitado) {
	            System.out.println("Ganaste el sorteo!! Te ganaste un terrreeeneeeiitorrrr");
	            numerosPerfectos.add(num); 
	        } else {
	            System.out.println("Sigue participando :( " );
	        }

	        scanner.close();
	    }
	}
